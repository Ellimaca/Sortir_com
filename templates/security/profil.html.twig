{% extends 'base.html.twig' %}

{% block body %}


<div class="container">
    <h2 class="text-center mb-5 mt-2">Mon profil</h2>
    <div class="row">
        <div class="col">
        {% if app.user.profilePicture %}
            <img src="./profile/img/{{ app.user.profilePicture.fileName }}" width="400" height="400">

        {% else %}
            <div id="profilePic">
                <img src="{{ asset('profile/img/user.png') }}" height="auto">
            </div>
        {% endif %}
        </div>
        <div class="col">
            {{ form(modifForm) }}
            <a href="{{ path('main') }}">
                <button class="btn-success btn mt-2">Annuler</button>
            </a>
        </div>
    </div>


    {% endblock %}

    {% block title %}

    {% endblock %}

