<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
              rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
              crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
        <link rel="stylesheet" href="{{ asset('style.css') }}">
        <link rel="icon" href="{{ asset('img/logoEni.png') }}">
        <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>

        {% for label, messages in app.flashes %}
            {% for message in messages %}

                <div class="text-center p-4 alert-{{ label }}">
                    <h4>{{ message }}</h4>
                </div>

            {% endfor %}
        {% endfor %}
        <title>{% block title %}Bienvenue!{% endblock %}</title>
    </head>
    <body>
    <div class="container">
            <header id="navigation" class="d-flex flex-wrap align-items-center justify-content-center
            justify-content-md-between py-2 mb-3 mr-1 border-bottom">
                <a href="{{ path('main') }}" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                    <img src="{{ asset('img/logoEni.png') }}" width="40" height="40">
                </a>
                <ul class="nav col-12 col-md-auto mb-2 mt-2 justify-content-center mb-md-0">
                    {% if app.user %}
                        <li><a href="{{ path('main') }}" class="nav-link px-2 link-dark">Accueil</a></li>
                        <li><a href="{{ path('security_profil') }}" class="nav-link px-2 link-dark">Mon profil</a></li>
                        <li><a href="{{ path('app_logout') }}" class="nav-link px-2 link-dark">Se d√©connecter</a></li>
                    {% endif %}
                </ul>
            </header>

            {% block body %}{% endblock %}
    </div>
    </body>
</html>
