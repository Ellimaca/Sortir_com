{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <section id="information" class="container">
        <div>
            <p>Date du jour : <span> {{ "now"|date("m/d/Y") }}</span></p>
        </div>
        <div>
            <p>Participant : <span> {{ app.user.firstName }}</span></p>
            {# <span> {{ app.user.firstName }}</span> #}
        </div>
    </section>
    <section id="FiltreRecherche" class="container">
        <h4>Filtrer les sorties</h4>
        {{ form_start(searchForm) }}
            <div class="row align-items-start">

                <article class="col-6">
                    <div class = "group">
                        <span>{{ form_label(searchForm.campus)}}</span>
                        <span>{{ form_widget(searchForm.campus)}}</span>
                        {{ form_errors(searchForm.campus)}}
                    </div>
                    <div >
                        <label for="{{ field_name(searchForm.searchBar) }}">Le nom de la sortie contient :</label>
                        <input type="search"
                               id="{{ field_name(searchForm.searchBar) }}"
                               name="{{ field_name(searchForm.searchBar) }}"
                        >
                    </div>
                    <div class = "group">
                        <span class = "group">
                            <label for="{{ field_name(searchForm.dateStart) }}">Entre le </label>
                            <input type="date"
                                   id="{{ field_name(searchForm.dateStart) }}"
                                   name="{{ field_name(searchForm.dateStart) }}"
                            >
                        </span>
                        <span class = "group">
                            <label for="{{ field_name(searchForm.dateEnd) }}"> et le </label>
                            <input type="date"
                                   id="{{ field_name(searchForm.dateEnd) }}"
                                   name="{{ field_name(searchForm.dateEnd) }}"
                            >
                        </span>
                    </div>

                </article>
                <article class="col-4">
                    <div>
                        {{ form_row(searchForm.isOrganisedByMe)}}
                    </div>
                    <div>
                        {{ form_row(searchForm.isAttendedByMe)}}
                    </div>
                    <div>
                        {{ form_row(searchForm.isNotAttendedByMe) }}
                    </div>
                    <div>
                        {{ form_row(searchForm.isFinished) }}
                    </div>
                </article>
                <article class="col-2">
                    <input type="submit" value="Rechercher">
                </article>

            </div>
        {{ form_end(searchForm) }}
    </section>
    <section id="EventsList" class="container">
        <div id="EventsListHeaders" name="EventsListHeaders" class="row align-items-start  m-0 p-0 border">
            <article class="col text-center text-wrap">
                <p>Nom de la sortie</p>
            </article>
            <article class="col text-center text-wrap">
                <p>date de la sortie</p>
            </article>
            <article class="col text-center text-wrap">
                <p>Clôture</p>
            </article>
            <article class="col text-center text-wrap">
                <p>inscrits/places</p>
            </article>
            <article class="col text-center text-wrap">
                <p>Etat</p>
            </article>
            <article class="col text-center text-wrap">
                <p>Inscrit</p>
            </article>
            <article class="col text-center text-wrap">
                <p>Organisateur</p>
            </article>
            <article class="col text-center text-wrap">
                <p>Actions</p>
            </article>
        </div>
        <ul id="EventsListContent" name="EventsListContent" class="list-group m-0 p-0">

            {# remplir avec les events #}
            {% for event in eventsList %}
                <li class="list-group-item m-0 p-0">
                    <div class="row align-items-start m-0 p-0">
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>{{ event.name }}</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>{{ event.dateTimeStart | date("m/d/Y h:i") }}</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>{{ event.dateTimeEnd | date("m/d/Y") }}</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>inscrits/places</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>Etat</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>Inscrit</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>Organisateur</p>
                        </article>
                        <article class="col text-center text-wrap m-0 p-0 border-start">
                            <p>Actions</p>
                        </article>
                    </div>
                </li>
            {% endfor %}

        </ul>
    </section>
    <section id="CreateEvent" class="container">
        <input type="button" value="Créer une sortie">
    </section>
{% endblock %}
